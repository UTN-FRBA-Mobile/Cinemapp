<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".presentation.ui.ScanActivity"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:text="Estamos procesando su compra...."
        android:textSize="18sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/optionDescuentos"
        android:layout_width="145dp"
        android:layout_height="121dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/codigo_qr">

            </androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_portada_descuentos"
                android:textAlignment="center"
                android:textColor="@color/colorLetraIcono"
                android:textSize="18dp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatTextView>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pagarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="1sp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10sp"
        android:layout_weight="1"
        android:background="@drawable/button_acept"
        android:text="@string/pagar"
        android:textColor="@color/colorNegro"
        android:textSize="20sp"></androidx.appcompat.widget.AppCompatButton>

</LinearLayout>